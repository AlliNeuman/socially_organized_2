<!DOCTYPE html>
<html>
  <head>
    <title>SociallyOrganized</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if current_user %>
      Signed in as <%= current_user.name.titleize %>! | <%= link_to "Logout", logout_path %>
      <% else %>
      <%= link_to 'Login', login_path %> | <%= link_to "Signup", signup_path %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
